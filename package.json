{
  "name": "infolibertaire",
  "version": "1.0.0",
  "description": "Client dédié au site InfoLibertaire.net",
  "author": {
    "name": "Ton Nom",
    "email": "ton@email.com"
  },
  "homepage": "https://InfoLibertaire.net",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder --linux deb appimage --win nsis portable"
  },
  "build": {
    "appId": "net.infolibertaire.desktop",
    "productName": "InfoLibertaire",
    "files": [
      "**/*"
    ],
    "linux": {
      "target": ["deb", "AppImage"],
      "icon": "build/icons",
      "category": "Network",
      "maintainer": "Ton Nom <ton@email.com>"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        },
        {
          "target": "portable",
          "arch": ["x64"]
        }
      ],
      "icon": "build/icons/256x256.png"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  },
  "devDependencies": {
    "electron": "28.1.0",
    "electron-builder": "^24.0.0"
  }
}
